<%- include("../partials/head.ejs")%>

    <body style="overflow-x: hidden;">
        <%- include("../partials/navbar.ejs") %>
            <div class="container">

                <div class="row">

                    <div class="col-md-8 offset-md-3 border addresult p-4 mt-4 bg-light">
                        <div class="text-center pt-1">
                            <h1>Edit Student Details</h1>
                        </div>
                        <form action="/teacher/updateResult/<%=result.rollNumber %>" method="POST">
                            <div class="row g-4">
                                <div class="col-md-4">
                                    <lable>Roll Number </lable>
                                </div>
                                <div class="col-md-6">
                                    <lable required name="rollNumber" type="number" value=<%=result.rollNumber %>
                                        class="form-control" placeholder="Roll Number"><%=result.rollNumber %>
                                    </lable>
                                </div>
                                <div class="col-md-4">
                                    <lable>Name</lable>
                                </div>
                                <div class="col-md-6">
                                    <input required name="studentName" type="text" class="form-control"
                                        value="<%= result.studentName %>" placeholder="Name">
                                </div>
                                <div class="col-md-4">
                                    <lable>Date Of Birth</lable>
                                </div>
                                <div class="col-md-6">
                                    <input required name="dateOfBirth" type="date" class="form-control"
                                        value=<%=result.dateOfBirth %>
                                    placeholder="DOB">
                                </div>
                                <div class="col-md-4">
                                    <lable>Score</lable>
                                </div>
                                <div class="col-md-6">
                                    <input required name="score" type="number" class="form-control"
                                        value=<%=result.score %>
                                    placeholder="Score">
                                </div>


                                <div class="col-12 mt-5">
                                    <button id="submit" type="submit"
                                        class="btn btn-primary float-start">Submit</button>
                                    <a type="button" class="btn btn-danger float-start ms-2" href="/teacher">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <footer>
                <p>Copyrigth 2022-2023</p>
            </footer>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
    </body>

    </html>